<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">



    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_gravity="center_vertical"
        android:layout_height="60dp">
        <!-- 图标-->
        <ImageView
            android:id="@+id/rank_logo_image"
            android:layout_width="20dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/rank_gold"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/rank_logo_text"
            android:layout_width="20dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:background="@drawable/bg_sign_today"
            android:text="4"
            android:textColor="#FF4F14"
            />

        <!--用户头像 -->
        <com.iyuba.core.me.widget.CircleImageView

            android:id="@+id/user_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rank_logo_image"
            android:src="@drawable/rank_blue" />

        <TextView
            android:id="@+id/user_image_text"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rank_logo_image"
            android:gravity="center"
            android:background="@drawable/rank_blue"
            android:text="C"
            android:textColor="@color/whitesmoke"
            android:textSize="12sp" />
        <!-- -->

        <TextView
            android:id="@+id/rank_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/user_image"
            android:text="sllbsjj"
            android:layout_alignTop="@+id/user_image"/>
        <TextView
            android:id="@+id/rank_user_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12053"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/user_image"
            android:layout_below="@id/rank_user_name"
            android:layout_marginTop="2dp"
            />


    </RelativeLayout>
    <TextView
        android:id="@+id/rank_user_info"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="60dp"
        android:gravity="left|center_vertical"
        android:layout_marginRight="10dp"
        android:text="累计阅读5555555个单词\n累计阅读35493篇文章\nWPM值:152"
        android:textColor="#313131"
        />

</LinearLayout>