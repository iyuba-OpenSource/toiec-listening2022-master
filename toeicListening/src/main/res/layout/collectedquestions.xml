<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout 
        android:id="@+id/rl_collectedquestions_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/main_back_button" />

        <TextView 
            android:id="@+id/text_collectedquestions_title"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/collected_question"/>
        <Button 
            android:id="@+id/collectedquestions_delete"
            android:layout_width="55dp"
            android:layout_height="35dp"
            style="@style/ButtonText"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_them_bg"
            android:text="@string/favtitle_delete"/>
    </RelativeLayout>
    <ListView 
        android:id="@+id/collectedquestions_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_collectedquestions_title"> 
    </ListView>

</RelativeLayout>
