<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#00000000">

    <ImageView
        android:id="@+id/iv_bg_sign"
        android:layout_width="220dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bg_sign_pic"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜你完成了闯关！"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/iv_bg_sign"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/tv_word_sign"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:text="分享领红包"
        android:background="@drawable/bg_word_test_sign_btn"
        android:layout_below="@+id/iv_bg_sign"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingBottom="3dp"
        android:gravity="center"/>
</RelativeLayout>
